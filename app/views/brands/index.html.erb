<div id="ribbon"><!-- RIBBON -->
  <ol class="breadcrumb"><!-- breadcrumb -->
    <li>Data Master</li><li>Merk</li><li>List</li>
  </ol><!-- end breadcrumb -->
</div><!-- END RIBBON -->
<div id="content"><!-- MAIN CONTENT -->
  <section id="widget-grid" class=""><!-- widget grid -->
    <div id='notice_template'><%= render 'layouts/notice' %></div>
    <div class="row"><!-- row -->
      <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12"><!-- NEW WIDGET START -->
        <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false"><!-- Widget ID (each widget will need unique ID)-->
          <h2 style="color:#BF1E2D; margin-top:-5px;"><i class="fa fa-list-ul"></i> <%= t(:brand_list) %></h2> <!-- header content -->
          <div style="margin-top:-10px;overflow-y: hidden"><!-- widget div-->
          
            <div class="widget-body no-padding"><!-- widget content -->
            <% if current_user.can_manage_brand? %>
              <%= link_to new_brand_url, :class => "btn btn-labeled btn-primary edit-btn-primary" do %>
                <span class="btn-label"><i class="glyphicon glyphicon-plus"></i></span>Add Brand
              <% end %>
              <% end %>
              <ul id="myTab1" class="nav nav-tabs" style='margin: 20px 0 6px 6px; float: left'>
                <li class="dropdown">
                  <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">Tools <i class="fa fa-angle-down"></i></button>
                  <ul class="dropdown-menu">
                    <li><%= link_to "Eksport ke CSV",  brands_path(:id => params[:id], format: "csv"), style: 'color: #333 !important' %></li>
                    <li><%= link_to "Eksport ke Excel", brands_path(:id => params[:id], format: "xls"), style: 'color: #333 !important' %></li>
                    <% if current_user.can_manage_brand? %>
                    <li data-toggle="modal" data-target="#myModal" style='cursor: pointer'><a style='color: #333 !important'>Import dari CSV</a></li>
                    <% end %>
                  </ul>
                </li>
              </ul>
            </div>
            <table class="table table-striped table-bordered table-hover" width="100%">
              <thead>
                <tr>
                  <th>No</th>
                  <th>
                    Kode
                    <span style="float: right;">
                      <%= link_to raw('<i class="fa fa-sort-desc"></i>'), 'javascript:void(0)', id: 'code-desc', class: 'sorting hide' %>
                      <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'code-asc', class: 'sorting' %>
                    </span>
                  </th>
                  <th>
                    Nama
                    <span style="float: right;">
                      <%= link_to raw('<i class="fa fa-sort-desc"></i>'), 'javascript:void(0)', id: 'name-desc', class: 'sorting hide' %>
                      <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'name-asc', class: 'sorting' %>
                    </span>
                  </th>
                  <th>
                    Department
                    <span style="float: right;">
                      <%= link_to raw('<i class="fa fa-sort-desc"></i>'), 'javascript:void(0)', id: 'name-desc', class: 'sorting hide' %>
                      <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'name-asc', class: 'sorting' %>
                    </span>
                  </th>
                  <th class='nowrap'>
                    Kode Supplier
                    <span style="float: right;">
                      <%= link_to 'javascript:void(0)', id: 'supplier_code-desc', class: 'sorting hide' do %>
                        <i class="fa fa-sort-desc"></i>
                      <% end %>
                      <%= link_to 'javascript:void(0)', id: 'supplier_code-asc', class: 'sorting' do %>
                        <i class="fa fa-sort-asc"></i>
                      <% end %>
                    </span>
                  </th>
                  <th class='nowrap'>
                    Nama Supplier
                    <span style="float: right;">
                      <%= link_to 'javascript:void(0)', id: 'supplier_name-desc', class: 'sorting hide' do %>
                        <i class="fa fa-sort-desc"></i>
                      <% end %>
                      <%= link_to 'javascript:void(0)', id: 'supplier_name-asc', class: 'sorting' do %>
                        <i class="fa fa-sort-asc"></i>
                      <% end %>
                    </span>
                  </th>
                  <th>
                    Diskon 1
                    <span style="float: right;">
                      <%= link_to 'javascript:void(0)', id: 'discount_percent1-desc', class: 'sorting hide' do %>
                        <i class="fa fa-sort-desc"></i>
                      <% end %>
                      <%= link_to 'javascript:void(0)', id: 'discount_percent1-asc', class: 'sorting' do %>
                        <i class="fa fa-sort-asc"></i>
                                      <% end %>
                                    </span>
                                  </th>

                                  <th>
                                    Diskon 2
                                    <span style="float: right;">
                                      <%= link_to 'javascript:void(0)', id: 'discount_percent2-desc', class: 'sorting hide' do %>
                                        <i class="fa fa-sort-desc"></i>
                                      <% end %>
                                      <%= link_to 'javascript:void(0)', id: 'discount_percent2-asc', class: 'sorting' do %>
                                        <i class="fa fa-sort-asc"></i>
                                      <% end %>
                                    </span>
                                  </th>

                                  <th>
                                    Diskon 3
                                    <span style="float: right;">
                                      <%= link_to 'javascript:void(0)', id: 'discount_percent3-desc', class: 'sorting hide' do %>
                                        <i class="fa fa-sort-desc"></i>
                                      <% end %>
                                      <%= link_to 'javascript:void(0)', id: 'discount_percent3-asc', class: 'sorting' do %>
                                        <i class="fa fa-sort-asc"></i>
                                      <% end %>
                                    </span>
                                  </th>

                                  <th>
                                    Diskon 4
                                    <span style="float: right;">
                                      <%= link_to 'javascript:void(0)', id: 'discount_percent4-desc', class: 'sorting hide' do %>
                                        <i class="fa fa-sort-desc"></i>
                                      <% end %>
                                      <%= link_to 'javascript:void(0)', id: 'discount_percent4-asc', class: 'sorting' do %>
                                        <i class="fa fa-sort-asc"></i>
                                      <% end %>
                                    </span>
                                  </th>

                                  <th>
                                    Diskon Nominal
                                    <span style="float: right;">
                                      <%= link_to 'javascript:void(0)', id: 'discount_rp-desc', class: 'sorting hide' do %>
                                        <i class="fa fa-arrow-down"></i>
                                      <% end %>
                                      <%= link_to 'javascript:void(0)', id: 'discount_rp-asc', class: 'sorting' do %>
                                        <i class="fa fa-arrow-up"></i>
                                      <% end %>
                                    </span>
                                  </th>

                                  <th>
                                    Set Harga
                                    <span style="float: right;">
                                      <%= link_to 'javascript:void(0)', id: 'set_harga-desc', class: 'sorting hide' do %>
                                        <i class="fa fa-arrow-down"></i>
                                      <% end %>
                                      <%= link_to 'javascript:void(0)', id: 'set_harga-asc', class: 'sorting' do %>
                                        <i class="fa fa-arrow-up"></i>
                                      <% end %>
                                    </span>
                                  </th>
                                  <% if current_user.can_manage_brand? %>
                                  <th>Aksi</th>
                                  <% end %>
                              </tr>
                              <tr>
                                  <th></th>
                                  <th class="hasinput">
                                    <%= text_field_tag :code, params[:code], class: 'form-control search', name: "brands.code" %>
                                  </th>
                                  <th class="hasinput">
                                    <%= text_field_tag :name, params[:name], class: 'form-control search', name: "brands.name" %>
                                  </th>
                                  <th class="hasinput">
                                    <%= text_field_tag :department_name, params[:department_name], class: 'form-control search', name: "m_classes.name" %>
                                  </th>
                                  <th class="hasinput">
                                    <%= text_field_tag :supplier_code, params[:supplier_code], class: 'form-control search', name: "suppliers.code" %>
                                  </th>
                                  <th class="hasinput">
                                    <%= text_field_tag :supplier_name, params[:supplier_name], class: 'form-control search', name: "suppliers.name" %>
                                  </th>
                                  <th class="hasinput">
                                    <%= text_field_tag :discount_percent1, params[:discount_percent1], class: 'form-control search', name: "to_char(discount_percent1, '99D99')" %>
                                  </th>
                    <th class="hasinput">
                      <%= text_field_tag :discount_percent2, params[:discount_percent2], class: 'form-control search', name: "to_char(discount_percent2, '99D99')" %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :discount_percent3, params[:discount_percent3], class: 'form-control search', name: "to_char(discount_percent3, '99D99')" %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :discount_percent4, params[:discount_percent4], class: 'form-control search', name: "to_char(discount_percent4, '99D99')" %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :discount_rp, params[:discount_rp], class: 'form-control search', name: "to_char(discount_rp, '99D99')" %></th>
                    <th class="hasinput">
                      <%= text_field_tag :set_harga, params[:set_harga], class: 'form-control search', name: "brands.set_harga" %></th>
                      <% if current_user.can_manage_brand? %>
                    <th></th>
                    <% end %>
                </tr>
              </thead>
              <tbody id='brand-list'><%= render 'brand_list' %></tbody>
            </table>
            </div><!-- end widget content -->
        </div><!-- end widget -->
      </article><!-- WIDGET END -->
    </div><!-- end row -->
  </section><!-- end widget grid -->
</div><!-- end row -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Import Merk</h4>
      </div>
      <div class="modal-body">
        <%= form_tag import_brands_path(:id => params[:id]), multipart: true do %>
          <%= file_field_tag :file %>
      </div>
      <div class="modal-footer">
        <%= link_to "Download Template", brands_path(format: "csv", :a => "a"), :class => "btn btn-success" %>
        <%= submit_tag "Import", :class => "btn btn-primary"%>
        <% end %>
      </div>
    </div>
  </div>
</div>
