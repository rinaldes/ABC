<% if params[:action] == "new"%>
	<tr>
<% end %>
	<%= form_for(internal_work_experience, html: { role: "form", multipart: true}, remote: true) do |f| %>
		<td>
			<div class="checkbox check-default">
                <input id="checkbox12" type="checkbox" value="1">
                <label for="checkbox12"></label>
            </div>
		</td>

		<td>
			<%= f.text_field :name_of_company, :class => "full-width", :placeholder => "Name Of Company" %>
		</td>

		<td>
			<%= f.text_field :job_desc, :class => "full-width", :placeholder => "Job Desc" %>
		</td>

		<td>
			<%= f.select :position, options_for_select(position) %>
			<% if params[:action] == "new"%>
				<%= f.hidden_field :employee_id, :value => params[:employee_id]%>
			<% else %>
				<%= f.hidden_field :id, :value => params[:id] %>
			<% end %>
		</td>

		<td>
			<%= f.select :organization, options_for_select(organization) %>
			<% if params[:action] == "new"%>
				<%= f.hidden_field :employee_id, :value => params[:employee_id]%>
			<% else %>
				<%= f.hidden_field :id, :value => params[:id] %>
			<% end %>
		</td>

		<td>
			<div class="input-append success date">
                <%= f.text_field :start, :class => "form-control"%>
                <span class="add-on"><span class="arrow"></span><i class="fa fa-th"></i></span> 
            </div>
		</td>

		<td>
			<div class="input-append success date">
                <%= f.text_field :end, :class => "form-control"%>
                <span class="add-on"><span class="arrow"></span><i class="fa fa-th"></i></span> 
            </div>
		</td>

		<td>
			<%= f.text_field :achievement, :class => "full-width", :placeholder => "Achievement" %>
		</td>

		<td>
			<div>
				<% if params[:action] == "new" %>
            		<%= f.submit "Add", class: "btn btn-success", :style => "margin: 0 30px;", :onclick => "submit_internal_work_experience();"%>
            	<% else %>
            		<%= f.submit "Update", class: "btn btn-success", :style => "margin: 0 30px;", :onclick => "update_internal_work_experience();"%>
            	<% end %>
            </div>
		</td>
	<% end %>
<% if params[:action] == "new"%>
	</tr>
<% end %>