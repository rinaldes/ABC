<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js" type="text/javascript"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-maskmoney/3.0.2/jquery.maskMoney.min.js" type="text/javascript"></script>
<div id="ribbon">
  <ol class="breadcrumb">
    <li>Data Master</li><li>Cashback</li><li><%= label %></li>
  </ol>
</div>
<div id="content">
  <%= render 'layouts/errors' %>
  <div class="row">
    <article class="col-sm-12 col-md-12">
      <div class="jarviswidget" id="wid-id-1" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-custombutton="false">
        <header id="header-cashback">
          <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
          <h2><%= label %> Cashback</h2>
        </header>
        <div>
          <div class="widget-body no-padding">
            <%= form_for @cashback, html: {class: "smart-form", id: "form-update-verify", :autocomplete => "off"} do |f| %>
              <fieldset>
                <div class="row">
                  <section class="col col-md-6">
                    <section>
                      <label class="col-md-4 label">Transaction Amount <span class='important'>*</span></label>
                      <label class="col-md-6 input custom-input-box"><%= f.number_field :transaction_amount, :class => "input-sm #{(error_field @cashback, :transaction_amount)} money", min: 0 %></label>
                    </section>
                    <section>
                      <label class="col-md-4 label">Cashback Amount <span class='important'>*</span></label>
                      <label class="col-md-6 input custom-input-box"><%= f.number_field :cashback_amount, :class => "input-sm #{(error_field @cashback, :cashback_amount)} money", min: 0 %></label>
                    </section>
                    <section>
                      <label class="col-md-4 label">Member Level <span class='important'>*</span></label>
                      <label class="col-md-6 input custom-input-box"><%= f.select :member_level_id, options_for_select(MemberLevel.all.map{|member_level|["level " + member_level.level.to_s + " : " + member_level.description, member_level.id]}), {prompt: 'Please Select'}, class: 'input-sm #{(error_field @cashback, :member_level_id)}' %></label>
                    </section>

                  </section>
                </div>
              </fieldset>
              <footer>
                <button type="submit" class="btn btn-primary">
                  Submit
                </button>
                <button type="button" class="btn btn-default" onclick="window.history.back();">
                  Back
                </button>
              </footer>
            <% end %>
          </div>
        </div>
      </div>
    </article>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function(){
    //$('.money').maskMoney({thousands:',', decimal:'.', affixesStay: false});
  });
</script>