<div class="row">
  <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false"><!-- Widget ID (each widget will need unique ID)-->
      <h2 style="color:#BF1E2D; margin-top:-5px;"><i class="fa fa-list-ul"></i> List Transaction History</h2> <div>
        <table class="table table-striped table-bordered" width="100%">
          <thead>
            <tr>
              <th>No</th>
              <th>
                Transaction No 
                <%= link_to raw('<i class="fa fa-sort-desc"></i>'), 'javascript:void(0)', id: 'sales.code-desc', class: 'sorting hide' %>
                <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'sales.code-asc', class: 'sorting' %>
              </th>
              <th>
                Date
                <span style="float: right;">
                  <%= link_to raw('<i class="fa fa-sort-desc"></i>'), 'javascript:void(0)', id: 'name-desc', class: 'sorting hide' %>
                  <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'name-asc', class: 'sorting' %>
                </span>
              </th>
              <th>
                Customer Name
                <span style="float: right;">
                  <%= link_to raw('<i class="fa fa-sort-desc"></i>'), 'javascript:void(0)', id: 'name-desc', class: 'sorting hide' %>
                  <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'name-asc', class: 'sorting' %>
                </span>
              </th>
              <th>
                Item QTY
                <span style="float: right;">
                  <%= link_to raw('<i class="fa fa-sort-desc"></i>'), 'javascript:void(0)', id: 'name-desc', class: 'sorting hide' %>
                  <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'name-asc', class: 'sorting' %>
                </span>
              </th>
              <th>
                Transaction Amount
                <span style="float: right;">
                  <%= link_to raw('<i class="fa fa-sort-desc"></i>'), 'javascript:void(0)', id: 'name-desc', class: 'sorting hide' %>
                  <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'name-asc', class: 'sorting' %>
                </span>
              </th>
              <th>
                Total Paid
                <span style="float: right;">
                  <%= link_to raw('<i class="fa fa-sort-desc"></i>'), 'javascript:void(0)', id: 'name-desc', class: 'sorting hide' %>
                  <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'name-asc', class: 'sorting' %>
                </span>
              </th>
              <th>
                Exchange
                <span style="float: right;">
                  <%= link_to raw('<i class="fa fa-sort-desc"></i>'), 'javascript:void(0)', id: 'name-desc', class: 'sorting hide' %>
                  <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'name-asc', class: 'sorting' %>
                </span>
              </th>
              <th>
                Outstanding
                <span style="float: right;">
                  <%= link_to raw('<i class="fa fa-sort-desc"></i>'), 'javascript:void(0)', id: 'name-desc', class: 'sorting hide' %>
                  <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'name-asc', class: 'sorting' %>
                </span>
              </th>
              </tr>
              <tr>
                <th></th>
                <th class="hasinput"><%= text_field_tag :code, params[:code], class: 'form-control search', name: 'sales.code' %></th>
                <th class="hasinput"><%= text_field_tag :transaction_date, params[:transaction_date], class: 'form-control search', name: "to_char(transaction_date, 'DD-MM-YYYY')" %></th>
                <th class="hasinput"><%= text_field_tag :name, params[:name], class: 'form-control search' %></th>
                <th class="hasinput"></th>
                <th class="hasinput"></th>
                <th class="hasinput"></th>
                <th class="hasinput"></th>
                <th class="hasinput"></th>
              </tr>
            </thead>
            <tbody id='transaction_history-list'><%= render 'transaction_history_list' %></tbody>
          </table>
        </div>
      </div>
  </article>
</div>
