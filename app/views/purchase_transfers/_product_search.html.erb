<fieldset>
  <div class="row">
    <section class="col col-md-8">
      <section class="col col-md-12">
        <% if %w(purchase_requests purchase_orders purchase_transfers).include?(params[:controller]) || params[:controller] == 'purchase_transfers' %>
          <button type="button" class="btn btn-primary" onclick="view_transaction_history($('#number').val())">Transaction History</button>
        <% end %>
        <section>
          <label class="col-md-1 label">CODE</label>
          <label class="col-md-8 input custom-input-box">
            <%= hidden_field_tag :product_id %>
            <%= text_field_tag :number, '', class: 'input-sm', placeholder: "Barcode", onkeyup: "$(this).next().next().hide()", onchange: "getProduct()" %>
          </label>
          <div style="margin-left:15px;">
            <button type="button" class="btn btn-primary" onclick="searchManual()">Browse</button>
          </div>
        </section>
      </section>
      <section class="col col-md-6">
        <section>
          <label class="col-md-3 label">MERK </label>
          <label class="col-md-9 input custom-input-box"><%= text_field_tag :merk, '', :class => "input-sm", disabled: true %></label>
        </section>
        <section>
          <label class="col-md-3 label">ARTICLE </label>
          <label class="col-md-9 input custom-input-box"><%= text_field_tag :article, '', :class => "input-sm", disabled: true %></label>
        </section>
        <section>
          <label class="col-md-3 label">COLOR </label>
          <label class="col-md-9 input custom-input-box"><%= text_field_tag :warna, '', :class => "input-sm", disabled: true %></label>
        </section>
        <section>
          <label class="col-md-3 label">DEPT </label>
          <label class="col-md-9 input custom-input-box"><%= text_field_tag :departement, '', :class => "input-sm", disabled: true %></label>
        </section>
        <section>
          <label class="col-md-3 label">M-CLASS </label>
          <label class="col-md-9 input custom-input-box"><%= text_field_tag :m_class, '', :class => "input-sm", disabled: true %></label>
        </section>
        <section>
          <label class="col-md-3 label">DISC % </label>
          <label class="col-md-1 input custom-input-box"><%= text_field_tag :disc1, '', :class => "input-sm", disabled: true %></label>
          <label class="col-md-1 input custom-input-box"><%= text_field_tag :disc2, '', :class => "input-sm", disabled: true %></label>
          <label class="col-md-1 input custom-input-box"><%= text_field_tag :disc3, '', :class => "input-sm", disabled: true %></label>
          <label class="col-md-1 input custom-input-box"><%= text_field_tag :disc4, '', :class => "input-sm", disabled: true %></label>
          <label class="col-md-2 input custom-input-box"><%= text_field_tag :disc5, '', :class => "input-sm", disabled: true %></label>
        </section>
      </section>
      <section class="col col-md-6">
        <section>
          <label class="col-md-4 label">HARGA POKOK</label>
          <label class="col-md-8 input custom-input-box"><%= text_field_tag :harga_pokok, '', class: "input-sm", disabled: true %></label>
        </section>
        <section>
          <label class="col-md-4 label">HARGA JUAL</label>
          <label class="col-md-8 input custom-input-box"><%= text_field_tag :harga_jual, '', :class => "input-sm", disabled: true %></label>
        </section>
        <section>
          <label class="col-md-4 label">HARGA BELI</label>
          <label class="col-md-8 input custom-input-box"><%= text_field_tag :harga_beli, '', :class => "input-sm", disabled: true %></label>
        </section>
        <section>
          <label class="col-md-4 label">STATUS 2</label>
          <label class="col-md-8 input custom-input-box"><%= text_field_tag :status2, '', :class => "input-sm", disabled: true %></label>
        </section>
        <section>
          <label class="col-md-4 label">STATUS 3</label>
          <label class="col-md-8 input custom-input-box"><%= text_field_tag :status3, '', :class => "input-sm", disabled: true %></label>
        </section>
        <section>
          <label class="col-md-4 label">STATUS 4</label>
          <label class="col-md-8 input custom-input-box"><%= text_field_tag :status4, '', :class => "input-sm", disabled: true %></label>
        </section>
      </section>
    </section>
    <section class="col col-md-4" id="product_image" border="1"></section>
    <section class="col col-md-12">
      <label class="col-md-1 label">SIZE</label>
      <label class="col-md-11 input custom-input-box">
        <%= hidden_field_tag :size_detail_id, '', :class => "input-sm" %>
        <table class="table table-striped table-bordered" id="table_size">
          <thead>
            <tr>
              <th>Size</th>
              <% 1.upto(14) do %>
                <td></td>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th>Available Quantity HO</th>
              <% 1.upto(14) do %>
                <td></td>
              <% end %>
            </tr>
            <tr>
              <th>Min Stock</th>
              <% 1.upto(14) do %>
                <td></td>
              <% end %>
            </tr>
            <tr>
              <th>Available Quantity Branch</th>
              <% 1.upto(14) do %>
                <td></td>
              <% end %>
            </tr>
            <tr>
              <th>Quantity</th>
              <% 1.upto(14) do %>
                <td></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </label>
    </section>
    <section>
      <button type='button' class="col-md-2 btn btn-primary" onclick="return(add_product('purchase_transfers'))">Add List</button>
    </section>
  </div>
</fieldset>