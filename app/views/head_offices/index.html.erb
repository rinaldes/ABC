                  <th class="hasinput"><%= text_field_tag :description, params[:description], class: 'form-control search' %></th>
                  <th class="hasinput"><%= text_field_tag :warehouse, params[:warehouse], class: 'form-control search' %></th>
                  <th class="hasinput"><%= text_field_tag :contact_person, params[:contact_person], class: 'form-control search', name: 'username' %></th>
