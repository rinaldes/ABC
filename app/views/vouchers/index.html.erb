<div id="ribbon"><!-- RIBBON -->
  <ol class="breadcrumb"><!-- breadcrumb -->
    <li>Data Master</li><li>Voucher</li><li>List</li>
  </ol><!-- end breadcrumb -->
</div><!-- END RIBBON -->
<div id="content"><!-- MAIN CONTENT -->
  <section id="widget-grid" class=""><!-- widget grid -->
    <div class="row"><!-- row -->
      <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12"><!-- NEW WIDGET START -->
        <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-editbutton="false"><!-- Widget ID (each widget will need unique ID)-->
          <h2 style="color:#BF1E2D; margin-top:-5px;"><i class="fa fa-list-ul"></i> List Voucher</h2> <!-- header content -->
          <div><!-- widget div-->
          <% if current_user.can_manage_voucher? %>
            <div class="widget-body no-padding"><!-- widget content -->
              <%= link_to new_voucher_url, :class => "btn btn-labeled btn-primary edit-btn-primary" do %>
                <span class="btn-label"><i class="glyphicon glyphicon-plus"></i></span>Tambah Voucher
              <% end %>
            </div>
            <% end %>
              <table class="table table-striped table-bordered" width="100%">
                <thead>
                  <tr>
                    <th>No</th>
                    <th>
                      Nama Voucher<%= link_to raw("<i class='fa fa-sort-desc'></i>"), 'javascript:void(0)', id: 'name-desc', class: 'sorting hide' %>
                      <%= link_to raw("<i class='fa fa-sort-asc'></i>"), 'javascript:void(0)', id: 'name-asc', class: 'sorting' %>
                    </th>
                    <th>
                      Valid From<%= link_to raw("<i class='fa fa-sort-desc'></i>"), 'javascript:void(0)', id: 'valid_from-desc', class: 'sorting hide' %>
                      <%= link_to raw("<i class='fa fa-sort-asc'></i>"), 'javascript:void(0)', id: 'valid_from-asc', class: 'sorting' %>
                    </th>
                    <th>
                    Valid Until<%= link_to raw("<i class='fa fa-sort-desc'></i>"), 'javascript:void(0)', id: 'valid_until-desc', class: 'sorting hide' %>
                    <%= link_to raw("<i class='fa fa-sort-asc'></i>"), 'javascript:void(0)', id: 'valid_until-asc', class: 'sorting' %>
                  </th>
                  <th>
                    Min Amount<%= link_to raw("<i class='fa fa-sort-desc'></i>"), 'javascript:void(0)', id: 'min_amount-desc', class: 'sorting hide' %>
                    <%= link_to raw("<i class='fa fa-sort-asc'></i>"), 'javascript:void(0)', id: 'min_amount-asc', class: 'sorting' %>
                  </th>
                  <th>
                    Discount<%= link_to raw("<i class='fa fa-sort-desc'></i>"), 'javascript:void(0)', id: 'discount-desc', class: 'sorting hide' %>
                    <%= link_to raw("<i class='fa fa-sort-asc'></i>"), 'javascript:void(0)', id: 'discount-asc', class: 'sorting' %>
                  </th>
                  <th>
                    Max Voucher<%= link_to raw("<i class='fa fa-sort-desc'></i>"), 'javascript:void(0)', id: 'max_voucher-desc', class: 'sorting hide' %>
                    <%= link_to raw("<i class='fa fa-sort-asc'></i>"), 'javascript:void(0)', id: 'max_voucher-asc', class: 'sorting' %>
                  </th>
                  <th>
                    Branch<%= link_to raw("<i class='fa fa-sort-desc'></i>"), 'javascript:void(0)', id: 'max_voucher-desc', class: 'sorting hide' %>
                    <%= link_to raw("<i class='fa fa-sort-asc'></i>"), 'javascript:void(0)', id: 'max_voucher-asc', class: 'sorting' %>
                  </th>
                  <% if current_user.can_manage_voucher? %>
                  <th>Aksi</th>
                  <% end %>
                </tr>
                <tr>
                  <th></th>
                  <th class="hasinput"><%= text_field_tag :name, params[:name], class: 'form-control search' %></th>
                  <th class="hasinput"><%= text_field_tag :valid_from, params[:valid_from], class: 'form-control search', name: "to_char(valid_from, 'DD-MM-YYYY')" %></th>
                  <th class="hasinput"><%= text_field_tag :valid_until, params[:valid_until], class: 'form-control search', name: "to_char(valid_until, 'DD-MM-YYYY')" %></th>
                  <th class="hasinput"><%= text_field_tag :min_amount, params[:min_amount], class: 'form-control search', name: "to_char(min_amount, '9,999,999D99')" %></th>
                  <th class="hasinput"><%= text_field_tag :discount, params[:discount], class: 'form-control search', name: "to_char(discount, '9,999,999D99')" %></th>
                  <th class="hasinput"><%= text_field_tag :max_voucher, params[:max_voucher], class: 'form-control search', name: "to_char(max_voucher, '9,999,999D99')" %></th>
                  <th class="hasinput"><%= text_field_tag :office_name, params[:office_name], class: 'form-control search' %></th>
                  <% if current_user.can_manage_voucher? %>
                  <th></th>
                  <% end %>
                </tr>
              </thead>
              <tbody id='voucher-list'><%= render 'voucher_list' %></tbody>
            </table>
          </div><!-- end widget -->
        </div><!-- end widget div -->
      </article><!-- WIDGET END -->
    </div><!-- end row -->
  </section><!-- end widget grid -->
</div><!-- end row -->