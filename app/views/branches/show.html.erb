<script src="/js/jquery-2.1.1.min.js"></script><!-- Link to Google CDN's jQuery + jQueryUI; fall back to local -->
<div id="ribbon"><!-- RIBBON -->
  <ol class="breadcrumb"><!-- breadcrumb -->
    <li>Data Master</li><li>Branch</li><li><%= @branch.office_name %></li>
  </ol><!-- end breadcrumb -->
</div><!-- END RIBBON -->
<div id="content"><!-- MAIN CONTENT -->
  <%= render 'layouts/errors' %>
  <div class="row">
    <article class="col-sm-12 col-md-12"><!-- NEW COL START -->
      <div class="jarviswidget" id="wid-id-1" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-custombutton="false">
        <header id="header-supplier">
          <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
          <h2><%= @branch.office_name %></h2>
        </header>
        <div><!-- widget div-->
          <div class="widget-body no-padding"><!-- widget content -->
            <%= form_for @branch, html: {class: "smart-form", id: "form-update-verify"} do |f| %>
              <fieldset> <!-- tambah supplier -->
                <div class="row">
                  <section class="col col-md-6">
                    <section class="form-group">
                      <label class="col-md-4 label">Nama Cabang</label>
                      <label class="col-md-8 input custom-input-box"><%= @branch.office_name %></label>
                    </section><br>
                    <section class="form-group">
                      <label class="col-md-4 label">Deskripsi</label>
                      <label class="col-md-8 textarea custom-input-box"><%= @branch.description %></label>
                    </section><br>
                    <section class="form-group">
                      <label class="col-md-4 label">Gudang</label>
                      <label class="col-md-8 input custom-input-box"><%= @branch.warehouse %></label>
                    </section><br>
                    <section class="form-group">
                      <label class="col-md-4 label">Penanggung Jawab (CP)</label>
                      <label class="col-md-8 input custom-input-box">
                        <%= @branch.user.first_name rescue '' %> <%= @branch.user.last_name rescue '' %>
                      </label>
                    </section><br>
                    <section class="form-group">
                      <label class="col-md-4 label">Departement</label>
                      <label class="col-md-8 label">
                      <% @departments.each_with_index do |depart, i| %>
                          <%= depart.department.name %> <br> 
                        <% end %>
                        </label>
                    </section><br>
                  </section>
                  <section class="col col-md-6">
                    <section class="form-group">
                      <label class="col-md-2 label">No Tlp</label>
                      <label class="col-md-10 input custom-input-box"><%= @branch.phone_number %></label>
                    </section><br>
                    <section class="form-group">
                      <label class="col-md-2 label">No Fax</label>
                      <label class="col-md-10 input custom-input-box"><%= @branch.fax_number %></label>
                    </section><br>
                    <section class="form-group">
                      <label class="col-md-2 label">No HP</label>
                      <label class="col-md-10 input custom-input-box"><%= @branch.mobile_phone %></label>
                    </section><br>
                    <section class="form-group">
                      <label class="col-md-2 label">Alamat</label>
                      <label class="col-md-10 textarea custom-input-box"><%= @branch.address %></label>
                    </section><br>
                  </section><br>
                </div>
              </fieldset>
              <footer>
                <button type="button" class="btn btn-default" onclick="window.history.back();">Back</button>
              </footer>
            <% end %>
          </div>
        </div>
      </div>
    </article>
  </div>
</div>