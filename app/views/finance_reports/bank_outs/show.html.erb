<%= render 'shared/breadcrumb' %>
<div id="content">
  <section id="widget-grid">
    <div id='notice_template'><%= render 'layouts/notice' %></div>
    <div class="row">
      <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false">
          <h2 style="color:#BF1E2D; margin-top:-5px;"><i class="fa fa-eye"></i> Bank Out Report Detail</h2>
          <header>
            <h2>Tanggal <%= format_date(@bank_out.due_date) %> - Perk <%= @bank_out.ap_number %></h2>
          </header>
          <div>
            <table class="table table-striped table-brequested table-hover" width="100%">
              <thead>
                <tr>
                  <th>Keterangan</th>
                  <th>Debet</th>
                  <th>Kredit</th>
                </tr>
              </thead>
              <tbody id='bank_out_list'><%= render 'list_show' %></tbody>
            </table>
            <% if @bank_out.present? %>
              <%= link_to export_finance_reports_bank_outs_path(format: "xlsx", :id => @bank_out.id), :class => "btn btn-labeled btn-primary edit-btn-primary" do %>
                <span class="btn-label"><i class="glyphicon glyphicon-download"></i></span>Export XLSX
              <% end %>
            <% end %>
          </div>
        </div>
      </article>
    </div>
  </section>
</div>
