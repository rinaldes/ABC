<table class="table no-more-tables table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Applicant Name</th>
                                <th>Attachment</th>
                                <th>Apply Position</th>
                                <th>Interview Result</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        <% @recruitment.interview_results.where(:status => "Selected").each do |ir| %>
                        <tr>
                            <td><%= ir.test_result.applicant_name %></td>
                            <td><%= ir.test_result.attachment %></td>
                            <td><%= ir.test_result.position %></td>
                            <td><%= ir.interview_result.truncate(30) %></td>
                            <td><%= ir.status %></td>
                            <td><%= link_to "As Employee" , new_employee_path %></td>
                        </tr>
                        <% end %>
                        </tbody>
                    </table>